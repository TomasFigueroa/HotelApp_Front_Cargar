@page "/reservar/editar/{nroRes:int}"
@inject IHTTPServicio http
@inject NavigationManager navigationManager

<div class="p-4">
    <div class="container col-md-6">
        <div class="shadow p-4 bg-white">
            <FormReserva res="reserva" onValidSubbmit="Grabar" onCancel="Cancelar" />
        </div>
    </div>
</div>

@code {
    private Reserva reserva = new Reserva();
    [Parameter] public int nroRes { get; set; }
    string Mensaje = "";

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await Mostrar();
    }

    private async Task Mostrar()
    {
        var respuesta = await http.Get<Reserva>($"api/Reservar/{nroRes}");

        if (!respuesta.Error)
        {
            reserva = respuesta.Respuesta;
        }
        else
        {
            Mensaje = await respuesta.ObtenerError();
        }
    }

    private async Task Grabar()
    {
        var respuesta = await http.Put<Reserva>($"api/Reservar/{nroRes}", reserva);
        if (respuesta.Error)
        {
            var body = respuesta.HttpResponseMessage;
        }

        navigationManager.NavigateTo("/");
    }

    private void Cancelar()
    {
        navigationManager.NavigateTo("/reserva");
    }
}
